@{
    ViewData["Title"] = "AddNewRoom";
}

<!DOCTYPE html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<html lang="en">

<head>
    <title>Add New Room</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/General.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>


<body>
    <center>
        <h2>Add New Room</h2>
        <br>
        <br>
    </center>

    @if (TempData["Info"] != null)
    {
        <p class="alert-light"> @TempData["Info"] <span class="close"></span> </p>
    }


<form name="myForm" action="@Url.Action("Add","RoomAdd")" method="post" required>
    <label for="roomtype">Room Type:</label>
    <select name="txtRoomType" style="width:100px;height:30px;border-radius:7%;background-color:lavender;color:indigo" required>
        <option value="Type1">Type1</option>
        <option value="Type2">Type2</option>
        <option value="Type3">Type3</option>
    </select>
    <br>
    <br>
    <label for="roomname">Room Name:</label>
    <input type="text" name="txtRoomName" placeholder="Enter the room name" style="width:230px;height:30px;border-radius:7%;background-color:lavender;color:indigo" required />
    <br />
    <br />
    <label for="roomnumber">Room Number:</label>
    <input type="text" name="txtRoomNumber" placeholder="Enter the room number" style="width:230px;height:30px;border-radius:7%;background-color:lavender;color:indigo" required />
    <br>
    <br>
    <label for="personcapacity">Maximum Person Capacity:</label>
    <input type="number" name="txtPersonCapacity" placeholder="Enter the person capacity" min="0" max="5"style="width:250px;height:30px;border-radius:7%;background-color:lavender;color:indigo" required />
    <br>
    <br>
    <label for="price">Price (for a night):</label>
    <input type="number" name="txtPrice" placeholder="Enter the price" min="0" style="width:160px;height:30px;border-radius:7%;background-color:lavender;color:indigo" required />
    <br />
    <br />
    <label for="upload-image">Add Photo:</label>
    <input type="file" name="Images" id="upload-image" multiple />
    <br>
    <br />
    <button class="button" type="submit"><span> Add </span></button>
</form>
    <br>
    <br>
    <br>
    <br>
    <br>
</body>

</html>

