@{
    ViewData["Title"] = "Reservation";
}

<!DOCTYPE html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<html lang="en">

<head>
    <title>Reservation</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/General.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>


<body>
    <center>
        <h2>Reservation</h2>
    </center>


    <form name="myForm" action="@Url.Action("Reservation","Reservation")" method="post" required>
        <label for="numperson">Number of Person:</label>
        <input type="number" name="txtNoPerson" placeholder="Enter the number of person" min="1" max="5" required />
        <br>
        <br>
        <label for="numroom">Number of Room:</label>
        <input type="number" name="txtNoRoom" placeholder="Enter the number of rooms" min="1" max="5" required />
        <br>
        <p>
            Start Date:
            <input value="startdate" type="date" name="txtStarDate" required>
        </p>
        <p>
            End Date:
            <input value="enddate" type="date" name="txtEndDate" required>
        </p>
        <button class="button" type="submit"> <span> Search </span></button>
    </form>
    <br>
    <br> <br> <br> <br>
</body>

</html>

